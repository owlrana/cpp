# To reverse bits of a given 32 bits unsigned integer.

# https://leetcode.com/problems/reverse-bits/

class Solution {
public:
    uint32_t reverseBits(int n) {
        uint32_t rev = 0; 
      
    // traversing bits of 'n' from the right 
        int count=0;
    while (count < 32 ) 
    { 
        // bitwise left shift  
        // 'rev' by 1 
        rev <<= 1; 
          
        // if current bit is '1' 
        if (n & 1 == 1) 
            rev ^= 1; 
          
        // bitwise right shift  
        // 'n' by 1 
        n >>= 1; 
              count++;
    } 
      
    // required number 
    return rev;
    }
};
